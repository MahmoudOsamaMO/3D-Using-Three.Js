   
@{
    ViewBag.Title = "Accessories";
}
<style>
    .Marg {
        margin-top: 10px;
    }
</style>
<script src="~/Scripts/Site/LinqJs/JSLINQ.js"></script>
<script src="~/Scripts/Site/LinqJs/json2html.js"></script>
<script src="~/Scripts/Site/LinqJs/jquery.json2html.js"></script>
<form ng-controller="LoadCtrl" ng-submit="submit()"
      name="myForm" novalidate>
    <hr />
    <div>
        <div id="foo" ng-show="Loading" style="margin-top:20%;">
        </div>
        <div ng-hide="Loading" id="panel" class="panel panel-primary">
            <div class="panel-heading">
                <h4>Manage Accessories</h4>
            </div>
            <div class="panel-body">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a class="text-primary" data-toggle="collapse" data-parent="#accordion" href="#collapse5">Manage Accessories</a>
                            </h4>
                        </div>
                        <div id="collapse5" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <div class="tab-pane active" id="5b">

                                    <div class="container-fluid">
                                        <div class="row">
                                            @*load*@
                                            <div class="col-lg-12">
                                                <div class="col-lg-12 well" style="font-size:12px;">
                                                    @*<h4 class="text-primary"><u>Manage Accessories</u></h4>*@
                                                    <div class="col-lg-5">
                                                        <div class="col-lg-6"><h4> Search Accessories By Surface</h4></div>
                                                        <div class="col-lg-4">
                                                            <select class="form-control" ng-model="AssignTo" ng-options="x for x in AssignTos" ng-change="WallAcc()"></select>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 Marg">
                                                        <div class="col-lg-4"> 
                                                            <h4> Destination Surface : <strong>{{Destination}}</strong></h4>
                                                         </div>
                                                        <div class="col-lg-2">
                                                            <button class="form-control btn btn-warning" ng-click="CopyWall()">Copy All </button>
                                                        </div>
                                                        <div class="col-lg-2"><h4 class="text-warning">{{Copied}}</h4></div>
                                                    </div>

                                                    <div class="col-lg-10 Marg">
                                                        <div class="col-lg-2">
                                                            <input type="checkbox" ng-model="Framed" /> Framed Openings
                                                        </div>
                                                        <div class="col-lg-2">
                                                            <input type="checkbox" ng-model="OpenWalls" /> Open Walls
                                                        </div>
                                                        <div class="col-lg-2">
                                                            <input type="checkbox" ng-model="Personal" /> Personal Doors
                                                        </div>
                                                        <div class="col-lg-2">
                                                            <input type="checkbox" ng-model="Sliding" /> Sliding Doors
                                                        </div>
                                                        <div class="col-lg-2">
                                                            <input type="checkbox" ng-model="RollUp" /> Rollup Doors
                                                        </div>
                                                        <div class="col-lg-2">
                                                            <button class="form-control btn btn-warning" ng-click="CopySelected()">Copy Selected</button>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 Marg">
                                                        {{SelectedCopied}}
                                                    </div>
                                                    <div class="col-lg-4 Marg">
                                                        <button class="form-control btn btn-warning" ng-click="CopyCheckedBox()">Copy Checked</button>
                                                    </div>
                                                    <div class="col-lg-2 Marg">
                                                        {{CopiedChecked}}
                                                    </div>
                                                    <div class="col-lg-12 Marg" ng-show="AccOfSepcificWall">
                                                        <table st-table="rowCollection" class="table table-striped table-sm table-responsive table-bordered text-center">
                                                            <thead class="text-center text-info">
                                                                <tr>
                                                                    <th rowspan="2">NO</th>
                                                                    <th rowspan="2">Name</th>
                                                                    <th colspan="2">Size</th>
                                                                    <th colspan="2">Surface</th>
                                                                    <th colspan="3">Location</th>
                                                                    <th rowspan="2">Remarks</th>
                                                                </tr>
                                                                <tr>
                                                                    <th>Width (m)</th>
                                                                    <th>Height (m)</th>
                                                                    <th>Assign To</th>
                                                                    <th>On Bay</th>
                                                                    <th>X</th>
                                                                    <th>Y</th>
                                                                    <th>Of</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr ng-repeat="x in AccOfSepcificWall track by $index ">
                                                                    <td>
                                                                        <div>{{$index + 1}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div><strong>{{x.AccName}}</strong> </div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.Width}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.Height}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.AssignTo}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.On}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.LocationX}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.LocationY}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.LocationFrom}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <div>{{x.AccObj.Remarks.Remark[0].Remark}}</div>
                                                                    </td>
                                                                    <td>
                                                                        <input type="checkbox" >
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="container-fluid">
                        <div class="text-center">
                            <input id="submit" @*type="submit"*@ type="button" ng-click="SaveData()" value="Save" class="btn-default form-control"
                                   ng-disabled="" />
                        </div>
                    </div>

                </div> @*EndContainer*@
            </div>
        </div>
    </div>
</form>


<script src="~/Scripts/Site/Accessories/ManageAccessories.js"></script>

<script src="~/Scripts/Site/spin.min.js"></script>

<script>
    var opts = {
        lines: 15 // The number of lines to draw
        , length: 28 // The length of each line
        , width: 14 // The line thickness
        , radius: 42 // The radius of the inner circle
        , scale: 0.50 // Scales overall size of the spinner
        , corners: 1 // Corner roundness (0..1)
        , color: '#000' // #rgb or #rrggbb or array of colors
        , opacity: 0.25 // Opacity of the lines
        , rotate: 0 // The rotation offset
        , direction: 1 // 1: clockwise, -1: counterclockwise
        , speed: 1 // Rounds per second
        , trail: 60 // Afterglow percentage
        , fps: 20 // Frames per second when using setTimeout() as a fallback for CSS
        , zIndex: 2e9 // The z-index (defaults to 2000000000)
        , className: 'spinner' // The CSS class to assign to the spinner
        , top: '50%' // Top position relative to parent
        , left: '50%' // Left position relative to parent
        , shadow: false // Whether to render a shadow
        , hwaccel: false // Whether to use hardware acceleration
        , position: 'absolute' // Element positioning
    }
    var target = document.getElementById('foo')
    var spinner = new Spinner(opts).spin(target);
</script>
